<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="cabbypatty.cab302_assignment.controller.JournalEntriesController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox alignment="CENTER" prefHeight="400.0" prefWidth="150" style="-fx-background-color: #181819;">

        <!-- Labels for the navigation menu -->
        <Label prefHeight="45.0" prefWidth="46.0" style="-fx-text-fill: white;" text="" />
        <!-- Mindful Moments Title -->
        <Label prefHeight="20.0" prefWidth="120.0" style="-fx-text-fill: white;" text="Mindful Moments">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
        </Label>

        <Label prefHeight="0.0" prefWidth="2.0" style="-fx-text-fill: white;" text="" />

        <!-- Home -->
        <HBox alignment="CENTER" spacing="5">
            <ImageView fitHeight="16.0" fitWidth="16.0">
                <Image url="@../image/home_icon.png" />
            </ImageView>
            <Hyperlink onAction="#home" style="-fx-text-fill: white;" text="Home" />
        </HBox>

        <!-- Calendar -->
        <HBox alignment="CENTER" spacing="5">
            <ImageView fitHeight="16.0" fitWidth="16.0">
                <Image url="@../image/calendar_icon.png" />
            </ImageView>
            <Label prefHeight="25.0" prefWidth="47.0" style="-fx-text-fill: white;" text="Calendar" />
        </HBox>

        <!-- Journal -->
        <HBox alignment="CENTER" spacing="5">
            <ImageView fitHeight="16.0" fitWidth="16.0">
                <Image url="@../image/journal_icon.png" />
            </ImageView>
            <Label prefHeight="25.0" prefWidth="38.0" style="-fx-text-fill: white;" text="Journal" />
        </HBox>

        <Label prefHeight="35.0" prefWidth="20.0" style="-fx-text-fill: white;" text="" />

        <!-- Support -->
        <HBox alignment="CENTER" spacing="5">
            <ImageView fitHeight="16.0" fitWidth="16.0">
                <Image url="@../image/support_icon.png" />
            </ImageView>
            <Label prefHeight="25.0" prefWidth="44.0" style="-fx-text-fill: white;" text="Support" />
        </HBox>

        <!-- Setting -->
        <HBox alignment="CENTER" spacing="5">
            <ImageView fitHeight="16.0" fitWidth="16.0">
                <Image url="@../image/setting_icon.png" />
            </ImageView>
            <Label prefHeight="26.0" prefWidth="44.0" style="-fx-text-fill: white;" text="Settings" />
        </HBox>


        <Label prefHeight="35.0" prefWidth="46.0" style="-fx-text-fill: white;" text="" />

        <HBox alignment="CENTER" spacing="5">
            <ImageView fitHeight="16.0" fitWidth="16.0">
                <Image url="@../image/logout_icon.png" />
            </ImageView>
            <Hyperlink onAction="#logout" style="-fx-text-fill: white;" text="Logout" />
        </HBox>

    </VBox>

    <!-- Logo Image -->
    <ImageView fitHeight="130.0" fitWidth="150.0" layoutX="1.0" layoutY="-9.0">
        <Image url="@../image/Logo.png" />
    </ImageView>

    <!-- Profile -->
    <ImageView fitHeight="35.0" fitWidth="110.0" layoutX="473.0" layoutY="14.0">
        <Image url="@../image/Profile.png" />
    </ImageView>

    <Label layoutX="158.0" layoutY="6.0" text="Journal Entries " textAlignment="CENTER">
        <font>
            <Font name="System Bold" size="23.0" />
        </font>
    </Label>
    <TextArea layoutX="163.0" layoutY="84.0" prefHeight="116.0" prefWidth="292.0" text="Today, the happiest moment for me was when I received an unexpected phone call from my best friend. We hadn't spoken in a while because of our busy schedules, so hearing their voice really brightened my day." wrapText="true" />
    <TextArea layoutX="163.0" layoutY="248.0" prefHeight="124.0" prefWidth="292.0" text="We ended up talking for over an hour, catching up on each other's lives, sharing funny stories, and reminiscing about old times. It felt like no time had passed at all, and I was reminded of how lucky I am to have such a supportive and caring friend." wrapText="true" />
    <Button layoutX="486.0" layoutY="314.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="83.0" style="-fx-background-color: #A6E873;" text="New Entry" textFill="#666666">
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
    </Button>
    <Button layoutX="486.0" layoutY="347.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="83.0" style="-fx-background-color: #A6E873;" text="Export Data" textFill="#666666">
        <font>
            <Font name="System Bold" size="12.0" />
        </font>
    </Button>
    <Label layoutX="163.0" layoutY="56.0" text="14 June, 2022" textAlignment="CENTER" textFill="#666666">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Label>
    <Label layoutX="163.0" layoutY="215.0" text="19 August, 2023" textAlignment="CENTER" textFill="#666666">
        <font>
            <Font name="System Bold" size="14.0" />
        </font>
    </Label>
    <ComboBox layoutX="305.0" layoutY="51.0" prefWidth="150.0" promptText="Sort " />

</AnchorPane>
