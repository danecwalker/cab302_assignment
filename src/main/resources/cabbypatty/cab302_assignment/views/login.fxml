<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox minHeight="600.0" minWidth="900.0" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cabbypatty.cab302_assignment.controller.LoginController">
    <HBox VBox.vgrow="ALWAYS">
        <VBox prefWidth="200.0" style="-fx-background-color: #000000; -fx-spacing: 8; -fx-padding: 20;">
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <HBox alignment="CENTER_LEFT" style="-fx-spacing: 8;">
                <ImageView fitHeight="48.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                    <Image url="@../image/Logo.png" />
                </ImageView>
                <VBox>
                    <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Mindful">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Text>
                    <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Moments">
                        <font>
                            <Font name="System Bold" size="18.0" />
                        </font>
                    </Text>
                </VBox>
            </HBox>
            <VBox prefHeight="8.0" prefWidth="100.0" />

        </VBox>
        <VBox style="-fx-padding: 20;" HBox.hgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT">
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Login">
                    <font>
                        <Font size="24.0" />
                    </font>
                </Text>
                <HBox HBox.hgrow="ALWAYS" />
            </HBox>
            <Separator prefWidth="200.0" />
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="20.0" VBox.vgrow="ALWAYS">
                <children>
                    <VBox prefHeight="200.0" prefWidth="100.0" HBox.hgrow="ALWAYS">
                        <children>
                            <HBox prefHeight="100.0" prefWidth="200.0">
                                <children>
                                    <HBox prefHeight="100.0" prefWidth="200.0">
                                        <children>
                                            <Text fx:id="currentDate1" strokeType="OUTSIDE" strokeWidth="0.0" text="Email Address">
                                                <font>
                                                    <Font name="System Bold" size="24.0" />
                                                </font>
                                            </Text>
                                        </children>
                                    </HBox>
                                    <HBox prefHeight="100.0" prefWidth="200.0">
                                        <children>
                                            <Text fx:id="currentDate11" strokeType="OUTSIDE" strokeWidth="0.0" text="Password">
                                                <font>
                                                    <Font name="System Bold" size="24.0" />
                                                </font>
                                            </Text>
                                        </children>
                                    </HBox>
                                    <HBox prefHeight="100.0" prefWidth="200.0" />
                                </children>
                            </HBox>
                            <VBox prefHeight="118.0" prefWidth="660.0">
                                <children>
                                    <HBox prefHeight="100.0" prefWidth="200.0">
                                        <children>
                                            <HBox prefHeight="100.0" prefWidth="200.0">
                                                <children>
                                                    <TextField fx:id="emailField" layoutX="151.0" layoutY="150.0" prefHeight="26.0" prefWidth="164.0" />
                                                </children></HBox>
                                            <HBox prefHeight="100.0" prefWidth="200.0">
                                                <children>
                                                    <PasswordField fx:id="passwordField" layoutX="151.0" layoutY="217.0" prefHeight="26.0" prefWidth="164.0" />
                                                </children></HBox>
                                            <HBox prefHeight="100.0" prefWidth="200.0" />
                                        </children>
                                    </HBox>
                                    <!-- Login Button -->
                                    <Button layoutX="251.0" layoutY="263.0" onAction="#login" prefWidth="100.0" text="Login" textAlignment="CENTER" />
                                    <!-- Register Link -->
                                    <Hyperlink onAction="#navigateToRegistrationPage" text="Or register here if you don't have an account" textAlignment="CENTER" />
                                </children>
                            </VBox>
                        </children>
                        <HBox.margin>
                            <Insets />
                        </HBox.margin>
                    </VBox>
                </children>
                <VBox.margin>
                    <Insets top="20.0" />
                </VBox.margin>
            </HBox>
        </VBox>
    </HBox>
</VBox>
